generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  products  Product[]
  alerts    Alert[]
}

model Product {
  id        String   @id @default(uuid())
  url       String
  title     String
  platform  String
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  prices    PriceHistory[]

  alerts Alert[]
}

model PriceHistory {
  id        String   @id @default(uuid())
  price     Float
  scrapedAt DateTime @default(now())

  productId String
  product   Product  @relation(fields: [productId], references: [id])
}

model Alert {
  id        String   @id @default(uuid())
  target    Float
  active    Boolean  @default(true)
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  productId String
  product   Product  @relation(fields: [productId], references: [id])
}
